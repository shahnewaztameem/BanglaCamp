<%- include ('partials/header.ejs')%>


<div class="container">
  <!-- show js errors  -->
  <div class="col-md-offset-4 col-md-4 text-center custom-mgt">
      <div id="error"></div>
  </div>
  
  <div class="login-wrapper">
    <div class="login-container wow animate__animated animate__fadeIn">
      <div class="login-content">
        <form action="/login" method="POST" onsubmit="return validateLogin()">
          <img src="/img/avatar.svg">
          <h2 class="title">Login</h2>
            <div class="input-div one">
              <div class="i">
                  <i class="fas fa-user"></i>
              </div>
              <div class="div">
                  <h5>Username</h5>
                  <input type="text" class="input" name="username" id="username" autocomplete="off">
              </div>
          </div>
          
            
                
          <div class="input-div pass">
            <div class="i"> 
                <i class="fas fa-lock"></i>
            </div>
            <div class="div">
                <h5>Password</h5>
                <input type="password" class="input" name="password" id="password" autocomplete="off">
            </div>
        </div>


          <a href="/forgot">Forgot Password?</a>
          <input type="submit" class="btn" value="Login">
        </form>
          </div>
    </div>
  </div>
</div>


