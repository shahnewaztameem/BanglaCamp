<%- include ("../partials/header.ejs") %>

<div class="row">
  <div class="col-md-3">
    <p class="lead"><%= campground.name%></p>
    <div class="list-group">
      <li class="list-group-item active">Item 1</li>
      <li class="list-group-item">Item 2</li>
      <li class="list-group-item">Item 3</li>
    </div>
  </div>
  <div class="col-md-9">
   
    <div class="thumbnail">
      <img src="<%=campground.image%>" class="img-responsive" alt="<%= campground.name%>">
      <div class="content-wrapper">
        <div class="caption-full">
          <div class="row">
            <div class="col-sm-6">
              <h4 class="text-left">
                <a href="/campgrounds/<%=campground._id%>"><strong><%= campground.name%></strong></a>
              </h4>
            </div>
            <div class="col-sm-6">
              <h4 class="text-right"><strong>BDT à§³ 2000/ night</strong> </h4>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12">
                <p class="text-justify"><%= campground.description %></p>
                <p class="author-name text-right">
                  Submitted by &mdash; <em><%=campground.author.username%></em>
                </p>
                <p>
                  <a href="/campgrounds/<%=campground._id%>/edit" class="btn btn-warning">Edit</a>
                  <button class="btn btn-danger button delete">Delete</button>
                  
                </p>
            </div>
          </div>
          
        </div>
      </div>
    </div>
    <div class="well">
      <div class="text-right">
        

        
       <%- include("../comments/new.ejs")%>
        <hr>
      </div>
      <% campground.comments.forEach(comment => { %>
        <div class="row">
          <div class="col-md-12">
            <strong><%= comment.author.username %></strong>
            <span class="pull-right">10 Days ago</span>
            <p><%= comment.comment %></p>
          </div>
        </div>
      <%})%>
    </div>
  </div>
</div>




<!-- modal delete confirmation -->

<div class="ui tiny modal">
  <div class="header">Delete Your Post</div>
  <div class="content">
    <p>Are you sure you want to delete this post?</p>
  </div>
  <div class="actions">
    <div class="ui positive button">No</div>
    <form action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST" class="s-modal-from">
      <button class="ui negative button">Delete</button>
    </form>
  </div>
</div>


<%- include ("../partials/footer.ejs") %>

