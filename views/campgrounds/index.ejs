<%- include("../partials/header.ejs")%>


<div class="row header-bg header-wrapper" data-parallax="scroll" data-image-src="/img/header-bg.jpg">
  <div class="col-sm-12">
      <header class="text-center">
        <div class="hero-wrapper">
          <h1>Welcome to BanglaCamp</h1>
          <p>
              View our best campgrounds listing from all over the Bangladesh
          </p>
          <p>
            <a href="/campgrounds/new" class="btn-custom btn-custom-1">Add a new camp</a>
          </p>
        </div>
          
      </header>
  </div>
</div>

<div class="container">

<div class="row text-center">
  <% campgrounds.forEach(campground => { %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <img src="<%=campground.image%>" alt="">
        <div class="caption">
          <h4><%=campground.name%></h4>
        </div>
        <p>
          <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More info</a>
        </p>
      </div>
    </div>
  <% })%>
  
</div>

</div>


<%- include("../partials/footer.ejs")%>
